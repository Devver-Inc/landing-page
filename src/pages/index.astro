---
import DeploymentTimer from "../components/custom/_utils/DeploymentTimer";
import SpeedVisualization from "../components/custom/_utils/SpeedVisualization";
import ContactSection from "../components/custom/sections/ContactSection";
import FeaturesShowcase from "../components/custom/sections/FeaturesShowcase";
import FloatingNavbar from "../components/custom/sections/FloatingNavbar";
import HeroSection from "../components/custom/sections/HeroSection";
import HowItWorksSection from "../components/custom/sections/HowItWorksSection";
import PricingSection from "../components/custom/sections/PricingSection";
import TestimonialsSection from "../components/custom/sections/TestimonialsSection";
import MainLayout from "../layouts/main.astro";

const meta = {
    title: "Devver | Deploy Test Environments Instantly",
    description: "Deploy ephemeral test environments in seconds. Let your clients and managers test features with instant preview URLs.",
};
---

<MainLayout {...meta}>
    <div class="min-h-screen bg-slate-900">
        <!-- Floating Navbar -->
        <FloatingNavbar client:load />

        <!-- Hero Section with 3D Effects -->
        <div class="relative">
            <HeroSection client:load />
        </div>

        <!-- Features Showcase with Animations -->
        <FeaturesShowcase client:load />

        <!-- Speed Visualization Section -->
        <section class="relative py-32 bg-white overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-b from-slate-950 via-white to-white"></div>

            <div class="relative max-w-7xl mx-auto px-4">
                <div class="text-center mb-20">
                    <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 rounded-full bg-gradient-to-r from-yellow-500/20 to-orange-500/20 border border-yellow-500/30">
                        <span class="text-2xl">⚡</span>
                        <span class="text-sm font-semibold text-orange-700">Blazing Fast</span>
                    </div>
                    <h2 class="text-4xl md:text-6xl font-bold text-slate-900 mb-6 px-4">Speed That Speaks for Itself</h2>
                    <p class="text-lg md:text-xl text-slate-700 max-w-2xl mx-auto px-4 font-medium">
                        Watch how fast Devver deploys your environments. No exaggeration, no tricks—just pure speed.
                    </p>
                </div>

                <div class="relative h-96 rounded-3xl bg-gradient-to-br from-slate-900 to-indigo-950 overflow-hidden shadow-2xl border border-slate-800">
                    <SpeedVisualization client:load />

                    <div class="absolute inset-0 flex items-center justify-center z-10">
                        <DeploymentTimer client:load />
                    </div>
                </div>

                <!-- Stats Grid -->
                <div class="grid md:grid-cols-4 gap-8 mt-16">
                    <div class="text-center p-6 rounded-2xl bg-slate-50 border border-slate-200 shadow-lg hover:shadow-xl transition-shadow">
                        <div class="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-2">99.99%</div>
                        <div class="text-slate-600 font-medium">Uptime SLA</div>
                    </div>
                    <div class="text-center p-6 rounded-2xl bg-slate-50 border border-slate-200 shadow-lg hover:shadow-xl transition-shadow">
                        <div class="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-2">&lt;1min</div>
                        <div class="text-slate-600 font-medium">Deploy Time</div>
                    </div>
                    <div class="text-center p-6 rounded-2xl bg-slate-50 border border-slate-200 shadow-lg hover:shadow-xl transition-shadow">
                        <div class="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-2">10K+</div>
                        <div class="text-slate-600 font-medium">Developers</div>
                    </div>
                    <div class="text-center p-6 rounded-2xl bg-slate-50 border border-slate-200 shadow-lg hover:shadow-xl transition-shadow">
                        <div class="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-2">1M+</div>
                        <div class="text-slate-600 font-medium">Deployments</div>
                    </div>
                </div>
            </div>
        </section>

        <!-- How It Works Section -->
        <HowItWorksSection client:load />

        <!-- Testimonials Section -->
        <TestimonialsSection client:load />

        <!-- Pricing Section -->
        <PricingSection client:visible />

        <!-- Final CTA Section -->
        <section id="waitlist" class="relative py-32 bg-slate-950 overflow-hidden">
            <div class="absolute inset-0 bg-grid-slate-800 [mask-image:radial-gradient(ellipse_at_center,white,transparent)] opacity-30"></div>

            <div
                class="absolute top-1/3 left-1/2 -translate-x-1/2 w-96 h-96 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-full opacity-15 animate-pulse"
                style="filter: blur(60px);"
            >
            </div>

            <div class="relative max-w-4xl mx-auto px-4 text-center">
                <div class="inline-flex items-center gap-2 px-4 py-2 mb-8 rounded-full bg-slate-800/80 border border-slate-700">
                    <span class="relative flex h-2 w-2">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
                    </span>
                    <span class="text-sm font-semibold text-white">Join 10,000+ developers</span>
                </div>

                <h2 class="text-4xl md:text-6xl font-bold text-white mb-6">Ready to Ship Faster?</h2>
                <p class="text-xl text-slate-300 mb-12 max-w-2xl mx-auto">Start deploying test environments in seconds. No credit card required.</p>

                <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12">
                    <a
                        href="https://app.devver.com/signup"
                        class="group relative px-8 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-full shadow-lg shadow-indigo-500/50 overflow-hidden hover:scale-105 transition-transform"
                    >
                        <span class="relative z-10 flex items-center gap-2">
                            Start Free Trial
                            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </span>
                    </a>
                    <a href="#how-it-works" class="px-8 py-4 bg-slate-800 text-white font-semibold rounded-full border border-slate-700 hover:bg-slate-700 transition-all">
                        See How It Works
                    </a>
                </div>

                <div class="flex items-center justify-center flex-wrap gap-8 text-sm text-slate-400">
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        No credit card required
                    </div>
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        14-day free trial
                    </div>
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Cancel anytime
                    </div>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <ContactSection client:load />

        <!-- Footer -->
        <footer class="bg-slate-950 border-t border-slate-800 py-12">
            <div class="max-w-7xl mx-auto px-4">
                <div class="grid md:grid-cols-4 gap-8 mb-8">
                    <div>
                        <div class="flex items-center gap-2 mb-4">
                            <img src="/favicon.png" alt="Devver Logo" class="h-8 w-8 rounded-lg" />
                            <span class="text-xl font-bold text-white">Devver</span>
                        </div>
                        <p class="text-slate-400 text-sm">Deploy test environments instantly and ship faster than ever.</p>
                    </div>
                    <div>
                        <h4 class="text-white font-semibold mb-4">Product</h4>
                        <ul class="space-y-2 text-sm text-slate-400">
                            <li><a href="#features" class="hover:text-white transition-colors">Features</a></li>
                            <li><a href="#pricing" class="hover:text-white transition-colors">Pricing</a></li>
                            <li><a href="#docs" class="hover:text-white transition-colors">Documentation</a></li>
                            <li><a href="#" class="hover:text-white transition-colors">API</a></li>
                        </ul>
                    </div>
                    <div>
                        <h4 class="text-white font-semibold mb-4">Company</h4>
                        <ul class="space-y-2 text-sm text-slate-400">
                            <li><a href="#" class="hover:text-white transition-colors">About</a></li>
                            <li><a href="#" class="hover:text-white transition-colors">Blog</a></li>
                            <li><a href="#" class="hover:text-white transition-colors">Careers</a></li>
                            <li><a href="#" class="hover:text-white transition-colors">Contact</a></li>
                        </ul>
                    </div>
                    <div>
                        <h4 class="text-white font-semibold mb-4">Legal</h4>
                        <ul class="space-y-2 text-sm text-slate-400">
                            <li><a href="#" class="hover:text-white transition-colors">Privacy</a></li>
                            <li><a href="#" class="hover:text-white transition-colors">Terms</a></li>
                            <li><a href="#" class="hover:text-white transition-colors">Security</a></li>
                        </ul>
                    </div>
                </div>
                <div class="pt-8 border-t border-slate-800 flex flex-col md:flex-row items-center justify-between gap-4">
                    <p class="text-sm text-slate-400">© 2024 Devver. All rights reserved.</p>
                    <div class="flex items-center gap-4">
                        <a href="#" class="text-slate-400 hover:text-white transition-colors">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path
                                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                                ></path>
                            </svg>
                        </a>
                        <a href="#" class="text-slate-400 hover:text-white transition-colors">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path
                                    d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                                ></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</MainLayout>
